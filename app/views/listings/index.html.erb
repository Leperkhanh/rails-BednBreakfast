<div class="container text-center mt-5 mb-5">
    <h1>All Current Listings</h1>
</div>

<div class="container text-center mb-5">
    <%= form_tag("/listings", method: "get") do %>
    <%= label_tag(:q, "Search for:") %>
    <%= text_field_tag(:q) %>
    <%= submit_tag("Search") %>
<% end %>
</div>


<div>
    <% @listings.each do | listing | %>
        <div class="container mb-5 text-center" style="width 75%;">
            <div class="card" style="width: 100%;">
                <%= image_tag(listing.img, :alt => "Card image cap", class: "card-img-top") %>
                <div class="card-body">
                    <h5 class="card-title alight-center"><%= link_to listing.title, listing_path(listing) %></h5>
                    <p class="card-text text-center"><%= listing.description %></p>
                    <%= link_to 'View Listing', listing_path(listing), class:"btn btn-primary" %>
                </div>
            </div>
        </div>
    <% end %>
</div>

