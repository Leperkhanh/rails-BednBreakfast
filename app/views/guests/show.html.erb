<div class="container text-center">
    <div class="row">
        <div class="col-12 mt-5 mb-3">
            <h1>Guest Show Page</h1>
        </div>
    </div>
</div>

<div class="container mb-5">
    <div class="card">
    <div class="card-header">My Bookings</div>
        <div class="card-body">
            <ul>
                <% @guest.bookings.each do | booking | %>
                <li>
                    <%= link_to booking.listing.title, listing_path(booking.listing) %> <br>
                    Price: $<%= booking.listing.price %> <br>
                    No. of Bedrooms: <%= booking.listing.bedroom %> <br>
                    No. of Bathrooms: <%= booking.listing.bathroom %> <br>
                    Comment to Host: <%= booking.comments %>
                </li> 
                <% end %>
            </ul>
        </div>
    </div>
</div>
