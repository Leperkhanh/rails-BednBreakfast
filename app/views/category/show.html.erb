<div class="container text-center mb-5 mt-5">
    <h1>
        All Listings In <%= @category.name %>
    </h1>
</div>

<div>
    <% @category.listings.each do |listing| %>
        <div class="container mb-5 text-center" style="width 75%;">
            <div class="card" style="width: 100%;">
                <%= image_tag(listing.img, :alt => "Card image cap", class: "card-img-top") %>
                <div class="card-body">
                    <h5 class="card-title alight-center" ><%= listing.title %> </h5>
                    <p class="card-text text-center"><%= listing.description %></p>
                    <%= link_to "View Listing", user_listing_path(listing.user, listing), class: "btn btn-primary" %>
                </div>
            </div>
        </div>
    <% end %>
</div>